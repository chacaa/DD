<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/home_custom"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dp"
        diagonal:diagonal_angle="7"
        diagonal:diagonal_direction="right"
        diagonal:diagonal_position="top"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/home_custom"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_custom"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="18dp"
                />

        </LinearLayout>

    </com.github.florent37.diagonallayout.DiagonalLayout>

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/home_trending"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dp"
        diagonal:diagonal_angle="7"
        diagonal:diagonal_direction="right"
        diagonal:diagonal_position="top"
        android:layout_marginTop="-60dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/home_trending"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_trending"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="18dp"
                />

        </LinearLayout>

    </com.github.florent37.diagonallayout.DiagonalLayout>

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/home_random"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dp"
        diagonal:diagonal_angle="7"
        diagonal:diagonal_direction="right"
        diagonal:diagonal_position="top"
        android:layout_marginTop="-60dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/home_random"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_random"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="18dp"
                />

        </LinearLayout>

    </com.github.florent37.diagonallayout.DiagonalLayout>

</LinearLayout>